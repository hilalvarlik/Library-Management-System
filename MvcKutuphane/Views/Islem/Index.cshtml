@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>İadesi Alınan Kitap Listesi</h2>


<table class="table table-striped">
    <tr style="background-color:#d3c0c0;">

        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>Üye İade Tarihi</th>


        

    </tr>
    <tbody>
        @foreach (var y in Model)
        {
            <tr>


                <td>@y.TBLKITAP.AD</td>
                <td>@y.TBLUYELER.AD @y.TBLUYELER.SOYAD</td>
                <td>@y.TBLPERSONEL.PERSONEL</td>
                <!--ödünç verilen kitabın alış tarihi olarak o günün tarihinin verilmesi-->
                <td>@Convert.ToDateTime(y.ALISTARIH).ToString("dd/MM/yyyy")</td>
                <!--üyelerin kitabı getirme tarihi olarak o günden sonraki 7. günün tarihinin verilmesi-->
                <td>@Convert.ToDateTime(y.UYEGETIRTARIH).ToString("dd/MM/yyyy")</td>


                
            </tr>
        }
    </tbody>
</table>




