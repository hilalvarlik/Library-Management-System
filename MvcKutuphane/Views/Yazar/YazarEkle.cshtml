@model MvcKutuphane.Models.Entity.TBLYAZAR

@{
    ViewBag.Title = "YazarEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}
    <h2>Yazarlar</h2>
    <form class="form-group" method="post">


        <div style="margin-top:15px">
            <label>Yazar Adı</label>
            @Html.TextBoxFor(m => m.AD, new { @class = "form-control" })
            @Html.ValidationMessageFor(y => y.AD) 
        </div>
        <div style="margin-top:15px">
            <label>Yazar Soyadı</label>
            @Html.TextBoxFor(m => m.SOYAD, new { @class = "form-control" })
            @Html.ValidationMessageFor(y => y.SOYAD)

        </div>
        <div style="margin-top:15px">
            <label>Detay</label>
            @Html.TextAreaFor(m => m.DETAY, new { @class = "form-control" })
        </div>

        <div style="margin-top:15px">
            <button class="btn btn-info">Yazar Ekle</button>
        </div>

    </form>


