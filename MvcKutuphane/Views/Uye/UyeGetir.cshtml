@model MvcKutuphane.Models.Entity.TBLUYELER
@{
    ViewBag.Title = "UyeGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Uye", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">

        @Html.HiddenFor(m => m.ID, new { @class = "form-control" })
        <br />
        <label>Üye Adı</label>
        @Html.TextBoxFor(m => m.AD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AD, "", new { @style = "color:forestgreen" })
        <br />
        <label>Üye Soyadı</label>
        @Html.TextBoxFor(m => m.SOYAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SOYAD, "", new { @style = "color:forestgreen" })
        <br />
        <label>E-mail</label>
        @Html.TextBoxFor(m => m.MAIL, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MAIL, "", new { @style = "color:forestgreen" })
        <br />
        <label>Kullanıcı Adı</label>
        @Html.TextBoxFor(m => m.KULLANICIADI, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.KULLANICIADI, "", new { @style = "color:forestgreen" })
        <br />
        <label>Şifre</label>
        @Html.TextBoxFor(m => m.SIFRE, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SIFRE, "", new { @style = "color:forestgreen" })
        <br />
        <label>Fotoğraf Linki</label>
        @Html.TextBoxFor(m => m.FOTOGRAF, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.FOTOGRAF, "", new { @style = "color:forestgreen" })
        <br />
        <label>Telefon</label>
        @Html.TextBoxFor(m => m.TELEFON, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TELEFON, "", new { @style = "color:forestgreen" })

    </div>

    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}
