@model MvcKutuphane.Models.Entity.TBLDUYURU

@{
    ViewBag.Title = "DuyuruDetay";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@using (Html.BeginForm("DuyuruGuncelle", "Duyuru", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">

        @Html.HiddenFor(m => m.ID, new { @class = "form-control" })
        <br />
        <label>Duyuru Kategorisi</label>
        @Html.TextBoxFor(m => m.KATEGORI, new { @class = "form-control" })
        <br />
        <label>Duyuru İçerik</label>
        @Html.TextAreaFor(m => m.ICERIK, new { @class = "form-control" })
        <br />
        <label>Duyuru Tarih</label>
        @Html.TextBoxFor(m => m.TARIH, new { @class = "form-control" })
    </div>

    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>

}
