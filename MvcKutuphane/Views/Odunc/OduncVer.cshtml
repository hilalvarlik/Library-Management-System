@model MvcKutuphane.Models.Entity.TBLHAREKET
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

    <form class="form-group" method="post">

        <div style="margin-top:15px">
            <label>Üye</label>
            <!--ödünç verilecek üyenin listeden seçilmesi-->
            @Html.DropDownListFor(m => m.UYE, (List<SelectListItem>)ViewBag.UYE, "Seçiniz", new { @class = "form-control" })
        </div>

        <div style="margin-top:15px">
            <label>Kitap</label>
            <!--ödünç verilecek kitabın listeden seçilmesi-->
            @Html.DropDownListFor(m => m.KITAP, (List<SelectListItem>)ViewBag.KIT, "Seçiniz", new { @class = "form-control" })
        </div>

        <div style="margin-top:15px">
            <label>Personel</label>
            <!--ödünç veren personelin listeden seçilmesi-->
            @Html.DropDownListFor(m => m.PERSONEL, (List<SelectListItem>)ViewBag.PER, "Seçiniz", new { @class = "form-control" })
        </div>

        <div style="margin-top:15px">
            <label>Kitap Alış Tarihi</label>
            <!--ödünç verilecek kitabın alış tarihi olarak o günün tarihinin verilmesi-->
            <input type="text" class="form-control" name="ALISTARIH" value="@DateTime.Now.ToShortDateString()" />
        </div>

        <div style="margin-top:15px">
            <label>Kitap İade Tarihi</label>
            <!--ödünç verilecek kitabın iade tarihi olarak o günden 7 gğn sonrasının tarihinin verilmesi-->
            <input type="text" class="form-control" name="IADETARIH" value="@DateTime.Now.AddDays(7).ToShortDateString()" />
        </div>
        <div style="margin-top:15px">
            <button class="btn btn-group" style="background-color:#893c94;
               color:white">
                Kitap Ödünç Ver
            </button>
            <input type="hidden" value="False" name="ISLEMDURUM"
        </div>

    </form>


