@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Ödünç Kitap Listesi</h2>


<table class="table table-striped">
    <tr>

        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>


        <th>İŞLEMLER</th>

    </tr>
    <tbody>
        @foreach (var y in Model)
        {
            <tr>


                <td>@y.TBLKITAP.AD</td>
                <td>@y.TBLUYELER.AD @y.TBLUYELER.SOYAD</td>
                <td>@y.TBLPERSONEL.PERSONEL</td>
                <td>@Convert.ToDateTime(y.ALISTARIH).ToString("dd/MM/yyyy")</td>
                <td>@Convert.ToDateTime(y.IADETARIH).ToString("dd/MM/yyyy")</td>


                <td>
                    <a href="/Odunc/OduncIade/@y.ID" class="btn btn-group" style="background-color:#42a462;
               color:white">Kitap İade Al</a>
                </td>
            </tr>
        }
    </tbody>
</table>



