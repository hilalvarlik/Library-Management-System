@using MvcKutuphane.Models.Entity
@model List<TBLKATEGORI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kategoriler</h2>

<table class="table table-striped">
    <tr style="background-color:rgb(252,178,22);">

        <th>KATEGORİ ADI</th>

        <th>İŞLEMLER</th>

    </tr>
    <tbody>
        @foreach (var ktg in Model)
        {
            <tr>

                <td>@ktg.AD</td>


                <td>
                    <a href="/Kategori/KategoriGetir/@ktg.ID" class="btn btn-group" style="background-color:#961f6e;
               color:white">Kategori Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Kategori/KategoriEkle/" class="btn btn-primary">Yeni Kategori Ekle</a>






