@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Kitaplarim";
    Layout = "~/Views/Shared/LayoutPanel.cshtml";
}

<h2>Kitap Geçmişim</h2>

<table class="table table-striped">
    <tr>

        <th>Kitap Adı</th>
        <th>Alış Tarihi</th>
        <th>Üye İade Tarihi</th>
        

    </tr>

    @foreach (var y in Model)
        {
            <tr>
                <!--giriş yapan üyenin daha önce ödünç aldığı kitapları listeler-->
                <td>@y.TBLKITAP.AD</td>
                <td>@Convert.ToDateTime(y.ALISTARIH).ToString("dd/MM/yyyy")</td>
                <td>@Convert.ToDateTime(y.IADETARIH).ToString("dd/MM/yyyy")</td>           
            </tr>
        }

</table>



